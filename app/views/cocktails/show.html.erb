<div class="banner-mini" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1509669803555-fd5edd8d5a41?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2550&q=80)">
  <div class="navbar sticky-top">
    <h4 class="m-0">Menu</h4>
    <%= link_to "Create your own", new_cocktail_path, class: "btn btn-outline-primary" %>
  </div>
  <h1><%= @cocktail.name %></h1>
</div>

<div class="container">

  <div>
    <%= link_to 'Add ingredient', new_cocktail_dose_path(@cocktail), class: "btn btn-primary" %>
  </div>

  <ul class="list-group mt-3">
    <% @cocktail.doses.each do |dose| %>
    <li class="list-group-item">
      <div class="d-flex justify-content-between align-items-center">
        <div>
          <strong><%= dose.ingredient.name %></strong>  <br>
          <%= dose.description %> <br>
        </div>
        <div>
          <%= link_to "delete", dose_path(dose),
          method: :delete,
          data: { confirm: "Are you sure?" } %>
          <% end %>
        </div>
      </div>
    </li>
  </ul>
  <div class="mt-3">
    <%= link_to 'Go back', root_path, class: "btn btn-warning" %>
  </div>
</div>
